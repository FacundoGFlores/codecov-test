{
    "rootDir": "src",
    "testRegex": "/__tests__/.*\\.(js)$",
    "coverageDirectory": "../build/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
        "**/*.js",
        "!build"
    ],
    "coverageReporters": [
        "json",
        "lcov",
        "text",
        "text-summary"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 30,
            "functions": 30,
            "lines": 30,
            "statements": 30
        }
    }
}